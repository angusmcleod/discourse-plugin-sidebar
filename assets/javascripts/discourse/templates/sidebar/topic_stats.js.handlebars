{{#if view.topic}}
  <h3>{{i18n topic_stats.title }}</h3>
  <dl>
    <dt>{{i18n topic_stats.created}}</dt>
    <dd>{{bound-date view.topic.created_at}}</dd>
    <dt>{{i18n topic_stats.last_answer}}</dt>
    <dd>{{bound-date view.topic.last_posted_at}}</dd>
    <dt>{{i18n topic_stats.views}}</dt>
    <dd>{{view.topic.views}}</dd>
    <dt>{{i18n topic_stats.posts}}</dt>
    <dd>{{view.topic.posts_count}}</dd>
  </dl>
  <div class="participants">
    <h4>{{i18n topic_stats.participants}}</h4>
    <div>
      {{#if view.participantsCollapsed}}
        {{#groupedEach participant in view.topic.details.fewParticipants}}
          {{topic-participant participant=participant}}
        {{/groupedEach}}
      {{else}}
        {{#groupedEach participant in details.participants}}
          {{topic-participant participant=participant}}
        {{/groupedEach}}
      {{/if}}
    </div>
  </div>
  <div class="moderators">
      <span>{{i18n category.mod_description}}

        {{#each view.category.moderators}}
          <a href="/users/{{unbound username}}">{{username}}</a>
        {{/each}}
      </span>
  </div>
{{/if}}

